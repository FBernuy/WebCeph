{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["webworker", "dom", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 3,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "src/**/*.test.ts", "build/**"]
}
